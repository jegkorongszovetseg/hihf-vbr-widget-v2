{
  "name": "@mjsz-vbr-elements/monorepo",
  "version": "2.1.2",
  "description": "Data visualization for MJSZ VBR",
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "workspaces": [
    "packages/*",
    "playground/**",
    "histoire/**"
  ],
  "scripts": {
    "playground": "pnpm run -C playground dev",
    "playground:localhost": "pnpm run -C playground dev --mode localhost",
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "vitest",
    "test:ci": "vitest run",
    "dump": "pnpm run test:ci && bumpp -r",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "pnpm -r --filter='./packages/*' run release && release-it",
    "publish:release": "vitest run && pnpm run build && pnpm -r publish --access public"
  },
  "keywords": [],
  "author": "√Åkos Stegner <akos.stegner@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "bumpp": "^9.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "happy-dom": "^12.10.3",
    "release-it": "^17.0.0",
    "vitest": "^0.34.6"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    }
  }
}
