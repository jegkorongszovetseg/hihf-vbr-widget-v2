{
  "name": "@mjsz-vbr-elements/monorepo",
  "type": "module",
  "version": "2.21.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "description": "Data visualization for MJSZ VBR",
  "workspaces": [
    "packages/*",
    "playground/**",
    "histoire/**"
  ],
  "author": "√Åkos Stegner <akos.stegner@gmail.com>",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "playground": "pnpm run -C playground dev",
    "playground:localhost": "pnpm run -C playground dev --mode localhost",
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "release": "pnpm test:ci && bumpp -r -x \"pnpm run changelog\" --all",
    "publish:release": "pnpm run build && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^9.10.2",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "happy-dom": "^16.7.2",
    "lint-staged": "^15.4.1",
    "simple-git-hooks": "^2.11.1",
    "vitest": "^3.0.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@vitejs/plugin-vue": "patches/@vitejs__plugin-vue.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
