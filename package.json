{
  "name": "@mjsz-vbr-elements/monorepo",
  "type": "module",
  "version": "2.35.1",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "description": "Data visualization for MJSZ VBR",
  "workspaces": [
    "packages/*",
    "playground/**",
    "histoire/**"
  ],
  "author": "√Åkos Stegner <akos.stegner@gmail.com>",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "playground": "pnpm run -C playground dev",
    "playground:localhost": "pnpm run -C playground dev --mode localhost",
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "pnpm run lint:fix && pnpm test:ci && pnpm run build && bumpp -r --all",
    "publish:release": "pnpm run build && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.2.0",
    "eslint": "^9.30.0",
    "eslint-plugin-format": "^1.0.1",
    "happy-dom": "^18.0.1",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "simple-git-hooks"
    ],
    "patchedDependencies": {
      "@vitejs/plugin-vue@6.0.0": "patches/@vitejs__plugin-vue@6.0.0.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
