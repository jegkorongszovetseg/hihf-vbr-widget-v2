{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@mjsz-vbr-elements/core": ["../core/src/index.js"],
      "@mjsz-vbr-elements/core/*": ["../core/src/*"],
      "@mjsz-vbr-elements/core/components": ["../core/src/components.js"],
      "@mjsz-vbr-elements/shared": ["../shared/index.js"],
      "@mjsz-vbr-elements/shared/*": ["../shared/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src", "src/**/*", "src/locales/**/*.json"],
  "exclude": ["dist/*"]
}
